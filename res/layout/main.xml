<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"

    tools:context="app.firstapp.egost.HomeActivity"
    android:theme="@android:style/Theme.Holo.Light" >

  <Button
      android:id="@+id/but6"
      android:layout_width="270dp"
      android:layout_height="60dp"
      android:layout_alignLeft="@+id/but3"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="36dp"
      android:background="@drawable/buttonselect"
      android:text="Электроакустические приборы"
      android:textColor="#FFFFFF"
      android:textSize="20sp" />

  <Button
      android:id="@+id/but3"
      android:layout_width="270dp"
      android:layout_height="60dp"
      android:layout_above="@+id/but6"
      android:layout_alignLeft="@+id/but5"
      android:layout_marginBottom="25dp"
      android:background="@drawable/buttonselect"
      android:text="Элементы коммутации"
      android:textColor="#FFFFFF"
      android:textSize="23sp" />

  <Button
      android:id="@+id/but5"
      android:layout_width="270dp"
      android:layout_height="60dp"
      android:layout_alignLeft="@+id/but2"
      android:layout_centerVertical="true"
      android:background="@drawable/buttonselect"
      android:text="Оптроны"
      android:textColor="#FFFFFF"
      android:textSize="25sp" />

  <Button
      android:id="@+id/but2"
      android:layout_width="270dp"
      android:layout_height="60dp"
      android:layout_above="@+id/but5"
      android:layout_alignLeft="@+id/but1"
      android:layout_marginBottom="26dp"
      android:background="@drawable/buttonselect"
      android:text="Пассивные элементы"
      android:textColor="#FFFFFF"
      android:textSize="25sp" />

  <Button
      android:id="@+id/but1"
      android:layout_width="270dp"
      android:layout_height="60dp"
      android:layout_above="@+id/but2"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="20dp"
      android:background="@drawable/buttonselect"
      android:text="Активные элементы"
      android:textColor="#FFFFFF"
      android:textSize="25sp" />

</RelativeLayout>
